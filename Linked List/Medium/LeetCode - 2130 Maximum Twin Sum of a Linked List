class Solution:
    def pairSum(self, head: Optional[ListNode]) -> int:
        slow = head
        fast = head
        
        while fast.next and fast.next.next:
            slow = slow.next
            fast = fast.next.next
        
        curr1 = list1 = head
        curr2 = slow.next
        list2 = curr2
        
        prev = None

        while curr2:
            temp = curr2.next
            curr2.next = prev
            prev = curr2
            curr2 = temp
        list2 = prev
        
        tail = dummy = ListNode(0)
        max_value = 0
        while list1 and list2:
            node_value = list1.val + list2.val
            if node_value > max_value:
                max_value = node_value
            
            list1 = list1.next
            list2 = list2.next
        return max_value

      

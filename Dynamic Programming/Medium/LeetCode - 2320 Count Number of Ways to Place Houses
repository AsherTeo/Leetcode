class Solution:
    def countHousePlacements(self, n: int) -> int:
        mod = 10**9 + 7
        memo = {}

        def dfs(n):
            if n in memo:
                return memo[n]
                
            if n == 1:
                return 2
            if n == 2:
                return 3

            memo[n] = dfs(n - 1) + dfs(n - 2) % mod
            return memo[n]  

        return dfs(n) ** 2 % mod
